<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_image_map"
    tools:context=".ImageMapActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_relat"
        android:padding="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/imgholder" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:id="@+id/map_relat"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_below="@id/img_relative">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="wrap_content"
            android:layout_height="300dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="260dp"
        android:layout_toRightOf="@id/map_relat"
        android:layout_below="@id/img_relat">
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:textStyle="bold"
            android:text="Email"/>

        <TextView
            android:id="@+id/email1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginTop="5dp"
            android:text="email"/>

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email1"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="Password" />

        <TextView
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_marginTop="5dp"
            android:text="password" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pass"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="Location" />

        <TextView
            android:id="@+id/lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@id/location"
            android:layout_marginTop="5dp"
            android:text="Latitude :" />

        <TextView
            android:id="@+id/lat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/lat"
            android:layout_marginRight="19dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/t_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lat"
            android:layout_marginTop="5dp"
            android:text="Longitude :" />

        <TextView
            android:id="@+id/long1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/t_long"
            android:layout_marginRight="19dp"
            android:text="TextView"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t_long"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="Time" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_marginTop="5dp"
            android:text="TextView" />

</RelativeLayout>
</RelativeLayout>